{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@uni-helper/vite-plugin-uni-pages": ["./packages/core/src/index.ts"]
    },
    "resolveJsonModule": true,
    "types": ["@dcloudio/types", "@uni-helper/vite-plugin-uni-pages"],
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
